<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TableRow>
        <EditText
            android:id="@+id/versionCodeEt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/enter_android_version"
            android:autofillHints="@string/enter_android_version"
            android:inputType="numberDecimal"
            android:layout_margin="12dp"/>
    </TableRow>

    <TableRow>
        <EditText
            android:id="@+id/codeNameEt"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/enter_android_code_name"
            android:autofillHints="@string/enter_android_code_name"
            android:inputType="text"
            android:layout_margin="12dp"/>
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/addBtn"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add"
            android:layout_margin="12dp"/>
    </TableRow>

    <TableRow
        android:background="#0079D6"
        android:layout_margin="12dp"
        android:padding="5dp">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/version"
            android:textColor="@color/white"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/code_name"
            android:textColor="@color/white"/>
    </TableRow>
</TableLayout>